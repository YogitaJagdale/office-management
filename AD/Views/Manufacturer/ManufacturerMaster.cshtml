
@model IEnumerable<SECU_CAMSPlus_DEV.Models.Manufacturer>
@{
    ViewBag.Title = "ManufacturerMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@*@if (TempData["Message"] != null)
