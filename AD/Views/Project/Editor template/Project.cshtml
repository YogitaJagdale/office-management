@model SECU_CAMSPlus_DEV.Areas.Configuration.Models.Project

@{
    Layout = null;
}

       <tr id=Model.ProjectID>

                            <td style="width: 5%">
                                @Html.CheckBox("chkboxSensors", Model.SMSBool)
                            </td>
                            <td style="width: 20%">
                                @Html.TextBoxFor(m => m.ZoneNo, new { @class = "form-control required", @style = "width: 40%;" })
                            </td>
                            <td style="width: 20%; color: #E6560F; font-weight: 600;">
                                @Html.DisplayFor(m => m.SensorType, new { @class = "form-control required " })
                            </td>
                            <td style="width: 15%">
                                @Html.TextBoxFor(m => m.SensorLocation, new { @class = "form-control required" })
                            </td>
                            <td style="width: 15%">

                                @Html.TextBoxFor(m => m.ZoneDescription, new { @class = "form-control required" })
                            </td>
                            <td style="width: 5%">
                                @Html.CheckBox("chkScheduler",Model.SchedulerBool, new { @class = "chk" })
                            </td>
                            <td>
                                @*    @Html.TextBoxFor(m => m.CameraNo)*@
                                @Html.DropDownList("ddlselectedCamera", new SelectList(ViewBag.CameraList, "Text", "Value", Model.CameraNo), new { @class = "form-control required" })
                            </td>
                            <td style="width: 5%">
                                @Html.CheckBox("chkboxSMSalert", Model.SMSBool)
                            </td>
                            <td style="width: 15%"></td>
                        </tr>
                        <tr>
                            <td colspan="8">

                                <div id="showscheduler" style="border: 1px solid #ccc;
    border-radius: 4px;@(Model.SchedulerBool ? "display:block" : "display:none") " class="panel-body">
                                    <table style="width: 100%; background-color: #F1F2F7;" class="table">
                                        <tr>
                                            <td style="width: 15%">Siren
                                            </td>
                                            <td>
                                                @Html.RadioButton("Active" + Model.ProjectID + "_1", "true", isChecked: Model.SirenBool)  ON 
                                            @Html.RadioButton("Active" + Model.ProjectID + "_1", "false", isChecked: !Model.SirenBool) OFF 
                                            </td>
                                            <td style="width: 15%">Raise Ticket
                                            </td>
                                            <td>
                                                @Html.RadioButton("Active" + Model.ProjectID + "_2", "true", isChecked: Model.RaiseTicketBool)  ON 
                                            @Html.RadioButton("Active" + Model.ProjectID + "_2", "false", isChecked: !Model.RaiseTicketBool) OFF 
                                            </td>
                                            <td style="width: 15%">Send Alert
                                            </td>
                                            <td>
                                                @Html.RadioButton("Active" + Model.ProjectID + "_3", "true", isChecked: Model.SendAlertBool)  ON 
                                            @Html.RadioButton("Active" + Model.ProjectID + "_3", "false", isChecked: !Model.SendAlertBool) OFF 
                                            </td>
                                            <td style="width: 15%">Send Video
                                            </td>
                                            <td>
                                                @Html.RadioButton("Active" + Model.ProjectID + "_4", "true", isChecked: Model.SendVideoBool)  ON 
                                            @Html.RadioButton("Active" + Model.ProjectID + "_4", "false", isChecked: !Model.SendVideoBool) OFF 
                                            </td>

                                        </tr>
                                        <tr>
                                            <td>Weekdays</td>
                                            <td>@Html.TextBoxFor(model => model.TimeFrom, "{0:HH:MM}", new { type = "time", @id = Model.ProjectID + "_TimeFrom", @Value = Model.TimeFrom.ToString("HH:MM"), @class = "form-control required" })</td>
                                            <td>to</td>
                                            <td>@Html.TextBoxFor(model => model.TimeTo, "{0:HH:MM}", new { type = "time", @id = Model.ProjectID + "_TimeTo", @Value = Model.TimeTo.ToString("HH:MM"), @class = "form-control required" })</td>

                                            <td colspan="4"></td>
                                        </tr>
                                    </table>

                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="8" style="border-top: 1px solid #ccc"></td>
                        </tr>