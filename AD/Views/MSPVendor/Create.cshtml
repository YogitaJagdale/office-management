                    @Html.LabelFor(m => Model.ContactPersonName, new { @class = "control-label " })
                    @Html.TextBoxFor(m => m.ContactPersonName, new {autocomplete="off",id = "txtContactPerson", @onblur = "IsValidContactPerson()", maxlength = 50,
