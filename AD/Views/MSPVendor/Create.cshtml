            @if (TempData["notice"] != null)
            {      @TempData["notice"]
            }
        </div>
            <div class="text-center">
            <input class="btn btn-success" type="submit" value="Add" id="btnaddMSPVendor" 
                  onclick="if ($(FormMSPVendorCreate).valid() && $('#ddlState').val() != '' && $('#ddlCity').val() != '')
                { return confirm('Are you sure to Add this MSP Vendor Details?') };" />


            <input class="btn btn-info" type="reset" value="Refresh" id="btnRefresh" onclick="setValue()" />
