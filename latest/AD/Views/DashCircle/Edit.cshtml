@model SECU_CAMSPlus_DEV.Models.DashCircle

@{
    ViewBag.Title = "Edit";
    Layout = null;
}

@if (TempData["DashEditSuccess"] != null)
{
    <script> $("#divSuccess").show();</script>// this script to show successslerts
}

@if (TempData["DashEditFail"] != null)
{
    <script> $("#divinvalid").show(); </script>// this script to show failed alerts
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Edit</h3>
</div>

@using (Html.BeginForm())
{   
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(m => Model.DashCircleName, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.DashCircleName, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.DashCircleName, null, new { @class = "valiation" })
                </div>
                <div class="form-group">                   
                    @Html.LabelFor(m => Model.editCircleName, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.editCircleName, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.editCircleName, null, new { @class = "valiation" })
                </div>

            </div>

        </div>
        <div class="clearfix"></div>
    </div>
    
    
    <div class="modal-footer">

        <div class="alert alert-danger" id="divinvalid" role="alert" style="display: none" align="Left">
            @if (TempData["DashEditFail"] != null)
            {      @TempData["DashEditFail"]

            }
        </div>

        <div class="alert alert-success" role="alert" id="divSuccess" style="display: none" align="Left">
            @if (TempData["DashEditSuccess"] != null)
            {      @TempData["DashEditSuccess"]

            }
        </div>

        <span id="progress" class="text-center" style="display: none;">
            <img src="/images/ajax-loader.gif" alt="Wait" />
            Wait..
        </span>
        <div class="text-center">
            <input class="btn btn-success" type="submit" value="Update" onclick="return confirm('Are you sure you wish to update this dash circle name?');" />

            <input type="button"  class="btn btn-warning"  value="Close" onclick="@("window.location.href='" + @Url.Action("Index", "DashCircle") + "'")    ;" />
        </div>
    </div>
    
}