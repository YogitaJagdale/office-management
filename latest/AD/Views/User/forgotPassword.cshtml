@model SECU_CAMSPlus_DEV.Models.UserInfo.forgotPassword

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>CAMSPlus :: Forgot Password</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Scripts/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.12.0.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Scripts/wow.min.js"></script>  
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>  


</head>


<body class="loginwrapper">

    @if (TempData["ForgotFailure"] != null)
    {
       <script> $(document).ready(function () { $("#divinvalid").show(); });</script>// this script to show failed alerts
    }
       
    @if (TempData["ForgotSuccess"] != null)
    {
       <script> $(document).ready(function () { $("#divSuccess").show(); });</script>// this script to show failed alerts
    }

 @using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post))
    {              
        <div class="login-overlay"></div>
        <div class="loginpanel"></div>
        <!--login Box Start here-->
        <div class="panel signin animated slideInDown">
            <div class="panel-heading">
                <div class="text-center">
                    <img src="~/Images/loginpage-logo.png" alt="CAMSPlus Logo" />
                </div>
                <h4 class="panel-title text-left">
                    <strong>Forgot Password</strong></h4>
            </div>

            <div class="panel-body">
                <div id="divinvalid" style="display: none;" class="alert alert-danger alert-dismissible fade in" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                        @if (TempData["ForgotFailure"] != null)
                        {      @TempData["ForgotFailure"]

                        }
                    </div>

                    <div id="divSuccess" style="display: none;" class="alert alert-danger alert-dismissible fade in" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                        @if (TempData["ForgotSuccess"] != null)
                        {     @TempData["ForgotSuccess"]
                        }
                    </div>
                <div class="form-group mb10">
                    @Html.LabelFor(model => model.LoginID, new { @class = "sr-only" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.TextBoxFor(model => model.LoginID, new { @class = "form-control", @placeholder = "Login ID" })
                    </div>
                    @Html.ValidationMessageFor(model => model.LoginID)
                </div>
                <div class="form-group mb10">
                    @Html.LabelFor(model => model.EmailID, new { @class = "sr-only" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        @Html.TextBoxFor(model => model.EmailID, new { @class = "form-control", @placeholder = "Email ID" })
                    </div>
                    @Html.ValidationMessageFor(model => model.EmailID)
                </div>

                <div class="form-group">
                    <button type="submit" id="btnShow" name="Command" value="ForgotPassword" class="btn btn-warning btn-block">Submit</button>
                </div>
                <div class="form-group">
                    <input type="button" value="Cancel" class="btn btn-default btn-stroke btn-sign btn-stroke-thin btn-block"
                            onclick="@("window.location.href='" + @Url.Action("Login", "User", new { Controller = "User", Action = "Login" }) + "'") " />


                </div>

            </div>

        </div>
       
    }

   @* <div>
        @Html.ActionLink("Back to List", "Index")
    </div>*@

    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>

  
</body>
</html>
