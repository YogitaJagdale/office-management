@*@model SECU_CAMSPlus_DEV.Models.PanelStatus*@
@model IList<SECU_CAMSPlus_DEV.Models.PanelStatus>

@{
     
}
<table class="table table-striped table-hover">
    <thead>
        <div class="chart-tittle">
            <tr>

                <th></th>
                <th>Zone No.
                </th>
                <th>Sensor Type
                </th>
                <th>Location
                </th>
                <th>Description
                </th>
                <th>Scheduler
                </th>
                <th>Camera
                </th>
                <th></th>
            </tr>
        </div>
    </thead>

    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {                    
            <tr id="@Model[i].PanelID">

                <td></td>
                <td>
                    @Html.DisplayFor(m => m[i].ZoneNo, new { @class = "form-control required", @style = "width: 40%;" })
                    @Html.HiddenFor(m => m[i].ZoneNo)
                </td>
                <td>
                    @Html.DisplayFor(m => m[i].SensorType, new { @class = "form-control required " })
                    @Html.HiddenFor(m => m[i].SensorType, new { @class = "form-control required " })
                </td>
                <td>
                    @Html.DisplayFor(m => m[i].SensorLocation, new { @class = "form-control required", @id = "txtlocation" + @Model[i].PanelID })
                </td>
                <td>
                    @Html.DisplayFor(m => m[i].ZoneDescription, new { @class = "form-control required", @id = "txtdescription" + @Model[i].PanelID })
                </td>
                <td>
                    @Html.CheckBoxFor(x => x[i].SchedulerBool, new { @class = "chk", @disabled = "disabled" })
                </td>
                <td>
                    @Html.DisplayFor(x => x[i].CameraNo)
                </td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td colspan="10" style="padding: 0px;">

                    <div id="showscheduler" style="@( Model[i].SchedulerBool ? "display:block" : "display:none") ">
                        <table class="table">
                            <tr>
                                <td>Siren
                                </td>
                                <td>                                              
                                    @Html.RadioButton("Active" + Model[i].PanelID + "_1", "true", isChecked: Model[i].SirenBool,htmlAttributes: new {  @disabled = "disabled"})  ON 
                                    @Html.RadioButton("Active" + Model[i].PanelID + "_1", "false", isChecked: !Model[i].SirenBool,htmlAttributes: new { @disabled = "disabled"}) OFF 
                                </td>
                                <td>Raise Ticket
                                </td>
                                <td>
                                      @Html.RadioButton("Active" + Model[i].PanelID + "_2", "true", isChecked: Model[i].RaiseTicketBool,htmlAttributes: new { @disabled = "disabled"})  ON 
                                      @Html.RadioButton("Active" + Model[i].PanelID + "_2", "false", isChecked: !Model[i].RaiseTicketBool,htmlAttributes: new { @disabled = "disabled"}) OFF 
                                </td>
                                <td>Send Alert
                                </td>
                                <td>
                                     @Html.RadioButton("Active" + Model[i].PanelID + "_3", "true", isChecked: Model[i].SendAlertBool,htmlAttributes: new { @disabled = "disabled"})  ON 
                                     @Html.RadioButton("Active" + Model[i].PanelID + "_3", "false", isChecked: !Model[i].SendAlertBool,htmlAttributes: new { @disabled = "disabled"}) OFF
                                </td>
                                <td>Send Video
                                </td>
                                <td>
                                    @Html.RadioButton("Active" + Model[i].PanelID + "_4", "true", isChecked: Model[i].SendVideoBool,htmlAttributes: new { @disabled = "disabled"})  ON 
                                    @Html.RadioButton("Active" + Model[i].PanelID + "_4", "false", isChecked: !Model[i].SendVideoBool,htmlAttributes: new { @disabled = "disabled"}) OFF 
                                </td>

                            </tr>
                            <tr>
                                <td>Weekdays</td>
                                <td>@Html.DisplayFor(m => m[i].TimeFrom, "{0:HH:mm:ss}", new { type = "time", @id = Model[i].PanelID + "_TimeFrom", @Value = Model[i].TimeFrom.ToString("HH:mm:ss"), @class = "form-control required", @style = "width: 80%;" })</td>
                                <td>to</td>
                                <td>@Html.DisplayFor(m => m[i].TimeTo, "{0:HH:mm:ss}", new { type = "time", @id = Model[i].PanelID + "_TimeTo", @Value = Model[i].TimeTo.ToString("HH:mm:ss"), @class = "form-control required", @style = "width: 80%;" })</td>

                                <td colspan="4"></td>
                            </tr>
                        </table>

                    </div>
                </td>
            </tr>
            <tr>
            </tr>
                           
                                        }
    </tbody>
</table>
